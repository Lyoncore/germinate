#! /usr/bin/make -f

tmp = $(CURDIR)/debian/germinate

build:

clean:
	dh_testdir
	dh_testroot
	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	install -m755 germinate.py $(tmp)/usr/bin/germinate
	install -m755 pkg-diff.py $(tmp)/usr/bin/germinate-pkg-diff

binary-arch:

binary-indep: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installchangelogs
	dh_compress
	dh_fixperms
	dh_python
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-arch binary-indep

.PHONY: build clean install binary-arch binary-indep binary
